<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sgColorPrimary</item>
        <item name="colorPrimaryDark">@color/sgColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SGMomentText">
        <item name="android:textSize">@dimen/SGMomentTextSize</item>
    </style>

    <style name="SGMomentContent" parent="SGMomentText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SGMomentHeaderGray" parent="SGMomentText">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="SGMomentName" parent="SGMomentText">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:colorPressedHighlight">@android:color/holo_blue_bright</item>
    </style>

</resources>
