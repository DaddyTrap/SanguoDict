<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sgColorPrimary</item>
        <item name="colorPrimaryDark">@color/sgColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SGMomentText">
        <item name="android:textSize">@dimen/SGMomentTextSize</item>
    </style>

    <style name="SGMomentContent" parent="SGMomentText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SGMomentHeaderGray" parent="SGMomentText">
        <item name="android:textColor">@color/sgColorDarkGray</item>
    </style>

    <style name="SGMomentName" parent="SGMomentText">
        <item name="android:textColor">@color/sgColorLink</item>
    </style>

    <style name="SGToolBarTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
