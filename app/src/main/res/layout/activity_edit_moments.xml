<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        tools:context="cn.org.sanguodict.sanguodict.activity.EditMomentActivity">
        <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/activity_edit_moments_toolbar"
            android:background="?attr/colorPrimary">
            <ImageView
                android:layout_width="@dimen/SGToolBarImgSize"
                android:layout_height="@dimen/SGToolBarImgSize"
                android:id="@+id/activity_edit_moments_toolbar_back"
                android:src="@drawable/ic_arrow_back_black_24dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="当前角色："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_edit_moments_toolbar_name"
                    android:textSize="20dp"
                    android:text="未选择"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/SGToolBarImgSize"
                    android:layout_height="@dimen/SGToolBarImgSize"
                    android:id="@+id/activity_edit_moments_toolbar_avatar"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/SGToolBarImgSize"
                android:layout_height="@dimen/SGToolBarImgSize"
                android:id="@+id/activity_edit_moments_toolbar_change_icon"
                android:src="@drawable/ic_autorenew_black_24dp"
                android:layout_marginRight="@dimen/SGToolBarBorderMargin"
                android:layout_gravity="right"/>
        </android.support.v7.widget.Toolbar>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_edit_moments_content_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_moments_toolbar"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:padding="10dp"
            android:lines="8"
            android:scrollbars="vertical"
            android:hint="这一刻的事情...."/>
        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/activity_edit_moments_addphoto"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_moments_content_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rect_border"
            android:layout_marginStart="8dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/activity_edit_moments_addphoto_icon"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="照片"
                android:textSize="14dp"
                android:layout_below="@+id/activity_edit_moments_addphoto_icon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/activity_edit_moments_addphoto_after"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_moments_content_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rect_border"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_autorenew_black_24dp"
            android:visibility="invisible"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_edit_moments_location_edittext"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_moments_addphoto"
            android:drawableLeft="@drawable/ic_location_on_gray_24dp"
            android:drawablePadding="8dp"
            android:hint="此时的位置"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_edit_moments_time_edittext"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_moments_location_edittext"
            android:drawableLeft="@drawable/ic_access_time_gray_24dp"
            android:drawablePadding="8dp"
            android:hint="此时的时间"
            />
        <Button
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:id="@+id/activity_edit_moments_post_button"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_moments_time_edittext"
            app:layout_constraintRight_toRightOf="parent"
            android:text="发布"
            android:textSize="16dp"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/rect_radius"
            android:layout_marginRight="12dp"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>

