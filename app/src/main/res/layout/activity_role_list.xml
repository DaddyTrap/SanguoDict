<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.org.sanguodict.sanguodict.activity.RoleListActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/role_list_bar"
        android:background="@color/sgColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/role_list_bar_icon_back"
            android:layout_width="@dimen/SGToolBarImgSize"
            android:layout_height="@dimen/SGToolBarImgSize"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/role_list_toolbar_title"
            android:text="@string/role_list_title"
            style="@style/SGToolBarTitle"/>

        <ImageView
            android:layout_width="@dimen/SGToolBarImgSize"
            android:layout_height="@dimen/SGToolBarImgSize"
            android:src="@drawable/ic_add_circle_white_24dp"
            android:id="@+id/role_list_bar_icon_add"
            android:layout_marginEnd="@dimen/SGToolBarBorderMargin"
            android:layout_gravity="right"/>
        <ImageView
            android:id="@+id/role_list_bar_icon_search"
            android:layout_width="@dimen/SGToolBarImgSize"
            android:layout_height="@dimen/SGToolBarImgSize"
            android:layout_marginEnd="@dimen/SGToolBarBorderMargin"
            android:src="@drawable/ic_search_white_24dp"
            android:layout_gravity="right"/>
        <ImageView
            android:layout_width="@dimen/SGToolBarImgSize"
            android:layout_height="@dimen/SGToolBarImgSize"
            android:visibility="gone"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:id="@+id/role_list_bar_icon_more"
            android:layout_marginEnd="@dimen/SGToolBarBorderMargin"
            android:layout_gravity="right"/>
        <ImageView
            android:layout_width="@dimen/SGToolBarImgSize"
            android:layout_height="@dimen/SGToolBarImgSize"
            android:visibility="gone"
            android:src="@drawable/ic_delete_forever_white_24dp"
            android:id="@+id/role_list_bar_icon_delete"
            android:layout_marginEnd="@dimen/SGToolBarBorderMargin"
            android:layout_gravity="right"/>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/role_list_search_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@color/sgColorWhite"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/role_list_search_icon_back"
            android:layout_width="@dimen/SGToolBarImgSize"
            android:layout_height="@dimen/SGToolBarImgSize"
            android:src="@drawable/ic_arrow_back_primary_24dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/role_list_search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@color/sgColorPrimary"
            android:theme="@style/SGEditText"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/role_list_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/role_list_bar">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
